@model IEnumerable<LaCatalanaWeb.Models.Color>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create">Nuevo Color</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreColor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreColor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdColor">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdColor">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdColor">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
